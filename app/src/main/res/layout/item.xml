<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/m_item"
    android:id="@+id/layout_item"
    app:cardElevation="@dimen/ele_item"
    app:cardCornerRadius="@dimen/radius_item"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="@dimen/vh_item_icon"
            android:layout_height="@dimen/vh_item_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginHorizontal="@dimen/m_15"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_item_tv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/m_15"
            android:paddingBottom="@dimen/m_item"
            android:maxLines="3"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textStyle="italic" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>