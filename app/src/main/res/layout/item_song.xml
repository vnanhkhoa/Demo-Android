<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/p_10"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/p_10">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/wh_60"
        android:layout_height="@dimen/wh_60"
        android:padding="@dimen/p_5">

        <ImageView
            android:id="@+id/imgSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/p_10"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/ts_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/ts_14" />

        <ImageView
            android:id="@+id/imgIsDownloaded"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_15"
            android:visibility="gone"
            android:src="@drawable/ic_round_smartphone_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingHorizontal="@dimen/p_5"
        android:src="@drawable/ic_round_favorite_24"
        app:tint="@color/black"
        tools:ignore="ContentDescription" />

</LinearLayout>